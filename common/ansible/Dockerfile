ARG BASEIMAGE=
ARG PYTHONIMAGE=
ARG OPENSSLIMAGE=

FROM ${OPENSSLIMAGE} AS openssl

FROM ${PYTHONIMAGE} AS build
ARG VERSION=latest

COPY --from=openssl ${OPENSSLPATH} ${OPENSSLPATH}

RUN pip3 install --upgrade pip
RUN pip3 install ansible==${VERSION}

WORKDIR /

ENV PYTHONWARNINGS="ignore"

ENTRYPOINT ["/bin/bash"]
